{
  "name": "one-more-branch",
  "version": "0.1.0",
  "description": "Interactive branching storytelling application",
  "main": "dist/index.js",
  "scripts": {
    "copy:views": "node -e \"require('fs').cpSync('src/server/views', 'dist/server/views', {recursive: true})\"",
    "copy:public": "node -e \"require('fs').cpSync('public', 'dist/public', {recursive: true})\"",
    "concat:js": "node scripts/concat-client-js.js",
    "build": "tsc && npm run concat:js && npm run copy:views && npm run copy:public",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration --passWithNoTests",
    "test:e2e": "jest --testPathPattern=test/e2e --passWithNoTests",
    "test:performance": "jest --testPathPattern=test/performance --passWithNoTests",
    "test:memory": "jest --testPathPattern=test/memory --passWithNoTests",
    "test:client": "jest --selectProjects client",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "interactive-fiction",
    "storytelling",
    "choose-your-own-adventure",
    "llm"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "dependency-cruiser": "^17.3.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ejs": "^4.0.1",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "zod": "^4.3.6"
  }
}
