{
  "server": {
    "port": 3000
  },
  "storage": {
    "storiesDir": "stories"
  },
  "llm": {
    "defaultModel": "anthropic/claude-sonnet-4.5",
    "models": {
      "spine": "anthropic/claude-sonnet-4.5",
      "entityDecomposer": "z-ai/glm-5",
      "structure": "anthropic/claude-sonnet-4.5",
      "planner": "anthropic/claude-sonnet-4.5",
      "accountant": "z-ai/glm-5",
      "lorekeeper": "z-ai/glm-5",
      "writer": "anthropic/claude-sonnet-4.5",
      "analyst": "z-ai/glm-5",
      "agendaResolver": "z-ai/glm-5"
    },
    "temperature": 0.8,
    "maxTokens": 8192,
    "retry": {
      "maxRetries": 3,
      "baseDelayMs": 1000
    },
    "promptOptions": {
      "fewShotMode": "none",
      "enableChainOfThought": true,
      "choiceGuidance": "strict"
    }
  },
  "logging": {
    "level": "debug",
    "prompts": {
      "enabled": true,
      "baseDir": "logs",
      "fileName": "prompts.jsonl"
    }
  }
}
